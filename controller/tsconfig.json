{
  "exclude": [
    "node_modules",
  ],
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "ESNext",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
